<?xml version="1.0" encoding="UTF-8"?>

<!-- LOCAL -->

<Configuration status="WARN">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="[%highlight{%-5level}] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t]: %c - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>